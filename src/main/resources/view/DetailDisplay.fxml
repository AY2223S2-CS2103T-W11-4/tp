<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="placeholder" styleClass="pane-light" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <VBox minHeight="105">
        <padding>
            <Insets bottom="5" left="10" right="5" top="5" />
        </padding>
        <HBox alignment="TOP_LEFT" spacing="5">
            <Label fx:id="name" styleClass="label-header-bright" text="name">
                <padding>
                    <Insets bottom="0" left="10" right="10" top="10" />
                </padding>
            </Label>
        </HBox>
      <Label fx:id="age" styleClass="label-bright" text="age">
         <padding>
            <Insets left="10.0" right="10.0" top="5.0" />
         </padding>
      </Label>
      <Label fx:id="nric" styleClass="label-bright" text="nric">
         <padding>
            <Insets left="10.0" right="10.0" top="5.0" />
         </padding>
      </Label>
        <Label fx:id="phone" styleClass="label-bright" text="phone">
            <padding>
                <Insets bottom="0" left="10" right="10" top="5" />
            </padding>
        </Label>
        <FlowPane fx:id="tags">
            <padding>
                <Insets bottom="0" left="10" right="10" top="5" />
            </padding>
        </FlowPane>
        <Label fx:id="email" styleClass="label-bright" text="email">
            <padding>
                <Insets left="10.0" right="10.0" top="5.0" />
            </padding>
        </Label>
        <Label fx:id="address" styleClass="label-bright" text="address">
            <padding>
                <Insets left="10.0" right="10.0" top="5.0" />
            </padding>
        </Label>
        <Label fx:id="medicalCondition" styleClass="label-bright" text="medical condition">
            <padding>
                <Insets left="10.0" right="10.0" top="5.0" />
            </padding>
        </Label>
      <Label fx:id="appointment" styleClass="label-bright" text="appointment">
         <padding>
            <Insets left="10.0" right="10.0" top="5.0" />
         </padding>
      </Label>
      <HBox alignment="BOTTOM_CENTER" prefHeight="44.0" prefWidth="420.0">
         <children>
            <Button fx:id="generateButton" mnemonicParsing="false" text="generate" />
            <Button fx:id="appointmentButton" mnemonicParsing="false" onAction="#showAddAppointmentWindow" text="Appointment" />
            <Button fx:id="uploadButton" mnemonicParsing="false" text="upload" />
         </children>
      </HBox>
      <ListView fx:id="viewDisplay" prefHeight="261.0" prefWidth="210.0" style="-fx-background-color: grey;">
         <VBox.margin>
            <Insets right="8.0" top="20.0" />
         </VBox.margin>
         <opaqueInsets>
            <Insets right="10.0" />
         </opaqueInsets>
      </ListView>
    </VBox>
</StackPane>
